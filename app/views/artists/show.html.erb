<div class="artist-container">
  <section class="artist-profile">
    <h2>
      <%= link_to @artist.fullname, @artist %>
    </h2>
    <!-- <img src="<%= @artist.image_url %>"/> -->
    <aside class="artist-bio">
      <%= @artist.bio %>
    </aside>
  </section>

  <section class="artist-works">
    <h3>Works</h3>
    <%= render partial: "works/index", locals: {works: @artist.works} %>
  </section>
</div>
