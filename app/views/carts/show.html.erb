<table>
  <% @cart.items.each do |item| %>
    <tr>
      <td><%= item.artist.fullname %></td>
      <td><%= item.title %></td>
      <td><%= item.price %></td>
    </tr>
  <% end %>
  <tr>
    <td></td>
    <td>Total: </td>
    <td><%= @cart.total %></td>
  </tr>
</table>
<%= link_to 'Checkout', checkout_path %>
