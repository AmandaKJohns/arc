<section class="work grid container" data-workId=<%= @work.id %> >


  <div class="row">
      <div class="twelve columns">
      <div class="work-header-container work-section">
        <header>
          <p class="work-header-artist"><%= link_to @artist.fullname, @artist %> </p>
          <p class="work-header-title"> <%= @work.title %></p>
        </header>
      </div>
      </div>
   </div>

  <div class="row">
    <div class="four columns">
      <section class="work-tracklist-container work-section">
          <table class="work-tracklist">
            <thead>
              <th><button class="add-work-to-player-btn button-primary">Play All</button></th>
              <th></th>
              <th><%= @work.duration_formatted %></th>
              <th><button class="add-work-to-cart-btn button-primary">Add to Cart ($<%= (@work.price_formatted) %>)</button></th>
            </thead>
            <tbody>
              <% @work.pieces.each do |piece| %>
                <%= render partial: "pieces/show", locals: {piece: piece} %>
              <% end %>
            </tbody>
          </table>
      </section>

      <div class="work-details-container work-section columns">
        <h4 class="work-header">
          Release Details
        </h4>
        <ul class="work-release-details">
          <li>
            <div>Label: <%= @work.record_label %></div> 
          </li>
          <li>
            <div>Release Date: <%= @work.end_date %></div> 
          </li>
        </ul>
      </div>
    </div>

    <div class="eight columns">

        <div class="work-image-container work-section twelve columns">
          <div class="lede-image">
            <img src="<%= @work.image_url %>" alt="Album Cover" />
          </div>
        </div>
        <div class="work-description-container work-section">
          <article class="work-description">
            <%= raw @work.description %>
          </article>

      </div>
    </div>


  </div>

</section>
