<p id="notice"><%= notice %></p>

<h1>Listing Pieces</h1>

<table>
  <thead>
    <tr>
      <th>Work</th>
      <th>Track number</th>
      <th>Title</th>
      <th>Duration</th>
      <th>Complete date</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pieces.each do |piece| %>
      <tr>
        <td><%= piece.work_id %></td>
        <td><%= piece.track_number %></td>
        <td><%= piece.title %></td>
        <td><%= piece.duration %></td>
        <td><%= piece.complete_date %></td>
        <td><%= piece.price %></td>
        <td><%= link_to 'Show', piece %></td>
        <td><%= link_to 'Edit', edit_piece_path(piece) %></td>
        <td><%= link_to 'Destroy', piece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Piece', new_piece_path %>
