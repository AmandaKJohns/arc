    <tr class="piece" data-pieceId=<%= piece.id %> >
      <td class='piece-play'><button class="add-piece-to-player-btn">Play</button></td>
      <td class='piece-title'><%= 1 + piece.track_number %>. <%= piece.title %></td>
      <td class='piece-duration'><%= piece.duration_formatted %></td>
      <td class="piece-purchase"><button class="add-piece-to-cart-btn">Add to Cart ($<%= piece.price_string %>)</button></td>
      <% if piece.description %>
      <td><a class="toggle-piece-description-btn">Show Description</a></td>
      <% end %>
    </tr>
    <tr class="piece-description" aria-hidden=true>
      <td class="piece-description-show"><%= piece.description %></td>
    </tr>
